Package: gorica
Type: Package
Date: 2021-09-09
Title: Evaluation of Inequality Constrained Hypotheses Using GORICA
Version: 0.1.1
Authors@R: c(
    person(c("Rebecca M."), "Kuiper", role = "aut"),
    person(c("Altinisik"), "Yasin", role = "aut"),
    person(c("Vanbrabant"), "Leonard", role = "ctb"),
